<% for (let taskpanel of taskpanels) {%>

<div class="card" id="card" style="border-color: <%= taskpanel.colorBorder %>">

  <div id=" <%= taskpanel.id %>" class="valueIncard">
    <form action="/" method="get">
      <div class="valueTitle">
        <%= taskpanel.title %>
      </div>
      <div class="valueTask" style="overflow: auto">
        <%= taskpanel.task %>
      </div>
    </form>
  </div>

  <div class="content" style="">
    <button id="<%= taskpanel.id %>" onClick="reply_click(this.id)" class="btn btn-warning" style="border-radius: 50%; padding: 2 rem;">&#9998;</button>

    <form action="/<%= taskpanel._id %>?_method=DELETE" method="POST">
      <button class="btn btn-danger" style="border-radius: 50%;">&#10006;</button>
    </form>
  </div>

  <form id="<%= taskpanel.id %>" style="display: none;" class="editForm" action="/<%= taskpanel._id %>?_method=PUT" method="POST">
    <li class="list-group-item">
      <input type="text" name="taskpanel[title]" value="<%= taskpanel.title %>">
    </li>
    <li class="list-group-item">
      <input type="text" name="taskpanel[task]" value="<%= taskpanel.task %>">
    </li>
    <button class="btn btn-warning">Confirm changes</button>
  </form>
</div>

<% } %>